<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
	<bean id="configProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">  
        <property name="locations">  
            <list>  
                <value>classpath:system.properties</value>  
            </list>  
        </property>  
    </bean>
	<dubbo:application name="distribute-manager-service-provider" owner="aliuge" version="0.0.1"
		logger="slf4j" compiler="javassist" />
	<dubbo:provider token="true"></dubbo:provider>	
	<dubbo:protocol name="dubbo" server="netty" port="20881" accesslog="foo/bar.log" dispatcher="all" threadpool="cached" threads="12" queues="10000"  />
	<dubbo:registry id="registry" protocol="zookeeper" address="${dubbo.registry.address}" check="true" timeout="15000" />
	
	<bean id="clientsService" class="io.github.liuzm.manage.web.service.impl.ClientsServiceImpl" />
	<dubbo:service interface="io.github.liuzm.manage.api.ClientService" ref="clientsService"/>
	
	<dubbo:monitor protocol="registry"></dubbo:monitor>
</beans>